<!DOCTYPE html>
<html lang="en">
<body>

<form method="get" action="/games">
   <input name="query" type="text" placeholder="Search Games">
   <button type="submit">Search</button>
</form>

{{#games}}
    <div>
        <h3>{{name}}</h3>
        <p><strong>Genre:</strong> {{genre}}</p>
        <p><strong>Platforms:</strong></p>
        <ul>
        {{#platforms}}
          <li>
            {{platform_name}} - {{publisher}} ({{year}})
          </li>
        {{/platforms}}
        </ul>
    </div>
{{/games}}

<!-- Optional: show message if no games -->
{{^games}}
    <p>No games found</p>
{{/games}}