<!DOCTYPE html>
<html lang="en">
{{> fragments/html_header }}
<body class="game-page">
  <div class="logo-wrapper">
    <img src="/css/gg purple logo.png" alt="GameGram Logo">
        <h1 class="brand-title">GameGram</h1>
        <img src="/css/gg purple logo.png" alt="GameGram Logo">
    </div>
    {{> fragments/navbar }}
    
    <div class="container">

        <h1>Game Search</h1>

        <form method="get" action="/games" class="search-form">
            <input name="query" type="text" placeholder="Search Games" class="search-input">
            <button type="submit" class="search-button">Search</button>
        </form>

{{#games}}
    <div>
        <h3>{{name}}</h3>
        <p><strong>Genre:</strong> {{genre}}</p>
        <p><strong>Platforms:</strong></p>
        <ul>
        {{#platforms}}
          <li>
            {{platform_name}} - {{publisher}} ({{year}})
          </li>
        {{/platforms}}
        </ul>
    </div>
    <div>
        <a href="/games/{{gameId}}" class="button">View Game</a>
    </div>
{{/games}}

            {{^games}}
                <p class="no-games">No games found</p>
            {{/games}}
        </div>
    </div>
</body>
</html>

