<h1>Your Friends</h1>

<ul class="friends-list">
  {{#friends}}
    <li class="friend-item">
      <h2>{{username}}</h2>

      {{#lastMovie}}
        <div class="movie-info">
          <p><strong>Most Recent Movie:</strong> {{title}}</p>
          <p><strong>Rating:</strong> {{rating}} / 10</p>
          <p><strong>Review:</strong> {{review}}</p>
        </div>
      {{/lastMovie}}

      {{^lastMovie}}
        <p><em>No movies watched yet.</em></p>
      {{/lastMovie}}

    </li>
  {{/friends}}

