<!DOCTYPE html>
<html lang="en">
{{> fragments/html_header}}

<body class="home-page">

    <div class="logo-wrapper">
        <img src="/css/gg purple logo.png" alt="GameGram Logo">
        <h1 class="brand-title">GameGram</h1>
        <img src="/css/gg purple logo.png" alt="GameGram Logo">

    </div>

    {{> fragments/navbar}}

    <div class="profile-container">
        <div class="profile-header">
            <img src="{{profileImagePath}}" alt="Profile" class="profile-picture">
            <h2>{{firstName}} {{lastName}}</h2>
        </div>

        <div class="profile-details">
            <h3>Recent Reviews</h3>
            <hr>

            <div>
                {{#reviews}}
                    {{> fragments/review_card }}
                {{/reviews}}
            
                {{^reviews}}
                    <p>No reviews posted yet.</p>
                {{/reviews}}
            </div>
        </div>
    </div>

</body>
</html>