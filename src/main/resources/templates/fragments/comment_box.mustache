<div class="comment-box" style="
    border: 1px solid #ccc;
    border-radius: 8px;
    padding: 10px;
    margin-top: 15px;
    width: 100%;
    box-sizing: border-box;
">
    <form method="post" action="/games/{{gameId}}/makereview/comments/{{postId}}">
        <textarea name="comment" placeholder="Write a comment..." rows="3" style="
            width: 95%;
            padding: 8px;
            border-radius: 5px;
            border: 1px solid #ccc;
            resize: vertical;
        "></textarea>
        <button type="submit" style="
            margin-top: 5px;
            padding: 6px 12px;
            border-radius: 5px;
            background-color: #4CAF50;
            color: white;
            border: none;
            font-weight: bold;
        ">Comment</button>
    </form>
</div>
