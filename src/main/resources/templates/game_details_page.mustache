<!DOCTYPE html>
<html lang="en">
{{> fragments/html_header }}
<body class="game-page">

  <div class="logo-wrapper">
    <img src="/css/gg purple logo.png" alt="GameGram Logo">
    <h1 class="brand-title">GameGram</h1>
    <img src="/css/gg purple logo.png" alt="GameGram Logo">
  </div>

  {{> fragments/navbar }}

  <a href="/games/{{gameId}}/makereview" class="button" style="
      display: inline-block;
      padding: 10px 20px;
      border-radius: 5px;
      background-color: #4CAF50;
      color: white;
      text-decoration: none;
      font-weight: bold;
      margin: 20px 0;
  ">Write a Review</a>

  <div class="reviews-container" style="
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      justify-content: center;
  ">
      {{#reviews}}
<div class="review-card" style="
    border: 1px solid #ccc;
    padding: 15px;
    border-radius: 10px;
    width: 300px;
    text-align: center;
    box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    display: flex;
    flex-direction: column;
    gap: 10px;
">
    {{#user}}
    <img src="{{profileImagePath}}" alt="Profile Image" style="
        width: 60px;
        height: 60px;
        border-radius: 50%;
        margin: 0 auto;
    ">
    <p><strong>{{firstName}} {{lastName}}</strong></p>
    {{/user}}
    {{starRatingString}}
    <p>{{content}}</p>
</div>
{{/reviews}}

  </div>

</body>
</html>
